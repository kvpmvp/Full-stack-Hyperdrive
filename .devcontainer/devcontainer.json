{
  "name": "Hyperdrive",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "postCreateCommand": "python -m venv .venv && . .venv/bin/activate && pip install -r requirements.txt",
  "forwardPorts": [8000],
  "portsAttributes": {
    "8000": { "label": "Hyperdrive", "onAutoForward": "openBrowser" }
  },
  "remoteUser": "vscode",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  }
}
